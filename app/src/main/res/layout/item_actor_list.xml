<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/abc_list_item_padding_horizontal_material">

            <ImageView
                android:id="@+id/item_actor_list_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@mipmap/ic_launcher"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/abc_list_item_padding_horizontal_material"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/item_actor_list_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Name of the Actor"
                    style="@style/TitleText"/>


                    <TextView
                        android:id="@+id/item_actor_list_location_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Location"
                        android:layout_gravity="center_vertical"

                        />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_list_item_padding_horizontal_material">

            <TextView
                android:id="@+id/item_actor_list_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DescriptionText"
                tools:text="This is the description and bla blah blah"/>

            <TextView
                android:id="@+id/item_actor_list_popularity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/abc_list_item_padding_horizontal_material"
                tools:text="3.4"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
